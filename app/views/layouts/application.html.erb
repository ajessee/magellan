<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="site-namespace" content="<%= @site.namespace %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= render 'layouts/fonts' %>
    <%= render 'layouts/icon' %>
    <%= render 'layouts/google_address' %>
    <%= render 'layouts/google_analytics' %>
    <%= render 'layouts/pixel_tracker' %>
    <%= render 'layouts/facebook_pixel' %>
    <%= render 'layouts/facebook_chatbot' %>
    <%= render 'layouts/hotjar' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body id="main-body-container">
    <%= yield %>
  </body>
</html>
