
<% background_url = 
  if mobile_device == 'mobile'
    'ursula_smiling_mobile.jpg'
  elsif mobile_device == 'tablet'
    'ursula_smiling_tablet.jpg'
  else 
    'ursula_smiling.jpg'   
  end %>

<section id="landing-section" class="bg-cover bg-scroll bg-center bg-no-repeat w-screen flex flex-col justify-center items-end" style="background-image: url('<%= image_url(background_url) %>')">

