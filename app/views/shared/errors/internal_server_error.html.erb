<div class="flex flex-col max-w-full h-screen">
  <!-- Header -->
  <%= render @site.namespace + '/main/header' %>
  <div id="server-error-route" class="flex flex-col flex-grow justify-center">
    <section id="server-error-section" class="text-gray-600 body-font" >
      <div class="flex flex-col items-center">
        <%= inline_svg_tag "internal_server_error.svg", class: 'h-56 md:h-80 w-auto stroke-current text-blue-600 p-8' %>
        <div class="text-center lg:w-2/3 w-full">
          <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">Server Error</h1>
          <p class="mb-8 text-2xl leading-relaxed">Oops, something went wrong. Don't worry, it's not you, it's us.</p>
          <p class="mb-8 text-2xl leading-relaxed">HTTP Status Code: <%= @error_code %></p>
        </div>
      </div>
    </section>
  </div>
  <!-- Footer -->
  <%= render @site.namespace + '/main/footer' %>
</div>

